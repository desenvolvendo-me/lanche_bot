<p id="notice"><%= notice %></p>

<h1>Menu Sodas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_sodas.each do |menu_soda| %>
      <tr>
        <td><%= menu_soda.name %></td>
        <td><%= menu_soda.type %></td>
        <td><%= menu_soda.price %></td>
        <td><%= link_to 'Show', menu_soda %></td>
        <td><%= link_to 'Edit', edit_menu_soda_path(menu_soda) %></td>
        <td><%= link_to 'Destroy', menu_soda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

